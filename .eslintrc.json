{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["webpack.config.js", "babel.config.js"],
  "rules": {
    "no-constant-condition": ["error", { "checkLoops": false }]
  }
}
